extends layout

block content
  div(class="panel panel-default", style="width:75%; margin: 0 auto;")
    div(class="panel-body")
      div(style="padding-left:10%;padding-right:10%")
        br
        h4 Personality Test
        br
        p Take one of the personality tests (urls given below) and enter the four letter code that you get after submitting the test in the text box given below.
        p 1. Short but less accurate personality test:
          a(href="http://www.personalitytype.com/career_quiz?type=1", target="_blank") &nbsp;link
        p 2. Long but highly accurate personality test:
          a(href="http://www.16personalities.com/free-personality-test", target="_blank") &nbsp;link

        p
          br
        div.input-group(style="width: 42%")
          .input-group-addon Enter the 4-letter code
          input.form-control(type="text", id="code", style="font-size: 20px; text-transform: uppercase;")
          span.input-group-btn
            button.btn.btn-primary(type="button") Submit
        p
          br

  p
    br

  div.panel.panel-default(style="width:75%; margin: 0 auto;")
    div.panel-body(style="padding-left:10%;padding-right:10%")
        div.progress
          div.progress-bar(role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 2%;")
            span.sr-only
