extends layout

block content
  div(class="panel panel-default", style="width:75%; margin: 0 auto;")
    div(class="panel-body")
      div(style="padding-left:10%;padding-right:10%")
        br
        h4 Hangout Preferences
        br
        p A. On a scale of 1-5 rate the following places to hang out
        ul.list-group(style="width:60%")
          li.list-group-item Restaurants
            span.badge
              select
                each i in [1,2,3,4,5]
                  option= i
          li.list-group-item Fast Food
          li.list-group-item Nightlife
          li.list-group-item Shopping
          li.list-group-item Bars
          li.list-group-item Beauty and Spas
          li.list-group-item Movies and Entertainment
          li.list-group-item Hiking and Sports

  p
    br
  div.panel.panel-default(style="width:75%; margin: 0 auto;")
    div.panel-body(style="padding-left:10%;padding-right:10%")
        div.progress
          div.progress-bar(role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 36%;")
            span.sr-only
